<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    android:weightSum="100" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:orientation="horizontal"
        android:weightSum="100" >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <com.outcube.bikeroute.utility.SquareView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/curve_background_green" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <com.outcube.bikeroute.utility.CustomFontTextView
                    android:id="@+id/text_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-7dp"
                    android:gravity="center_horizontal|bottom"
                    android:text="08"
                    android:textColor="#ffffff"
                    android:textSize="33sp"
                    font:fontName="bebas.ttf" />

                <TextView
                    android:id="@+id/text_month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|top"
                    android:text="AUG"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
            </LinearLayout>
        </FrameLayout>

        <com.outcube.bikeroute.utility.CustomFontTextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dp"
            android:text="จักรยานประเพณี บางมด มธจ. ครั้งที่ 20"
            android:textColor="#ffffff"
            android:textSize="22sp"
            font:fontName="ThaiSansNeue-Black.ttf" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:scaleType="centerInside"
        android:src="@drawable/mock_event_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center_vertical|left"
        android:orientation="horizontal"
        android:weightSum="100" >

        <com.outcube.bikeroute.utility.CustomFontTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:gravity="center_vertical|left"
            android:text="สถานที่"
            android:textColor="#969696"
            android:textSize="20sp"
            font:fontName="ThaiSansNeue-UltraBold.ttf" />

        <com.outcube.bikeroute.utility.CustomFontTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:gravity="center_vertical|left"
            android:text="มจธ. บางมด-บางขุนเทียน"
            android:textColor="#eaeaea"
            android:textSize="20sp"
            font:fontName="ThaiSansNeue-Light.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center_vertical|left"
        android:orientation="horizontal"
        android:weightSum="100" >

        <com.outcube.bikeroute.utility.CustomFontTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:gravity="center_vertical|left"
            android:text="วันที่"
            android:textColor="#969696"
            android:textSize="20sp"
            font:fontName="ThaiSansNeue-UltraBold.ttf" />

        <com.outcube.bikeroute.utility.CustomFontTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:gravity="center_vertical|left"
            android:text="11-14 กค."
            android:textColor="#eaeaea"
            android:textSize="20sp"
            font:fontName="ThaiSansNeue-Light.ttf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center_vertical|left"
        android:orientation="horizontal"
        android:weightSum="100" >

        <com.outcube.bikeroute.utility.CustomFontTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:gravity="center_vertical|left"
            android:text="เวลา"
            android:textColor="#969696"
            android:textSize="20sp"
            font:fontName="ThaiSansNeue-UltraBold.ttf" />

        <com.outcube.bikeroute.utility.CustomFontTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:gravity="center_vertical|left"
            android:text="06:30-10:30"
            android:textColor="#eaeaea"
            android:textSize="20sp"
            font:fontName="ThaiSansNeue-Light.ttf" />
    </LinearLayout>

    <com.outcube.bikeroute.utility.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="17"
        android:gravity="center_vertical|left"
        android:text="Bha bha bha bha bha bha bha bha bha bha bha bha bha bha bha bha bha"
        android:textColor="#eaeaea"
        android:textSize="20sp"
        font:fontName="ThaiSansNeue-Light.ttf" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="100" >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/join_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/curve_background_purple_selector" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <com.outcube.bikeroute.utility.CustomFontTextView
                    android:id="@+id/join_btn_text"
                    style="@style/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|bottom"
                    android:text="JOIN" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

</LinearLayout>