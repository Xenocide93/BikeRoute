<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/curve_background_white"
    android:orientation="horizontal"
    android:padding="10dp"
    android:weightSum="100" >

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="20" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <com.outcube.bikeroute.utility.SquareView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/curve_background_green" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <com.outcube.bikeroute.utility.CustomFontTextView
                android:id="@+id/text_day"
                style="@style/DateNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-7dp"
                android:gravity="center_horizontal|bottom"
                android:text="08"
                android:textColor="#ffffff"
                android:textSize="33sp" />

            <TextView
                android:id="@+id/text_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|top"
                android:text="AUG"
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="60"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="10dp" >

        <com.outcube.bikeroute.utility.CustomFontTextView
            android:id="@+id/name"
            style="@style/title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="จักรยานประเพณี บางมด" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <com.outcube.bikeroute.utility.CustomFontTextView
                android:id="@+id/place"
                style="@style/subTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="มจธ. บางมด-บางขุนเทียน" />

            <com.outcube.bikeroute.utility.SquareView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/profile_location" />
        </LinearLayout>

        <com.outcube.bikeroute.utility.CustomFontTextView
            android:id="@+id/time"
            style="@style/subTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="06.30-10.30" />
    </LinearLayout>

    <View
        android:layout_width="0.2dp"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:background="@color/gray_text_subtitle" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="20" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <com.outcube.bikeroute.utility.SquareImageButton
                android:id="@+id/join_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/curve_background_purple_selector" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <com.outcube.bikeroute.utility.CustomFontTextView
                android:id="@+id/join_btn_text"
                style="@style/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|bottom"
                android:text="JOIN" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>